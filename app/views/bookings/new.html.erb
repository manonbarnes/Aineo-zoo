<div class="index">
  <h2> Add a new booking!</h2>
  <%= simple_form_for [@animal, @booking] do |f| %>
    <%= f.input :start_time %>
    <%= f.input :start_date %>
    <%= f.input :duration, label: 'Sessions are in hours'%>
    <div class="row justify-content-center">
    <%= f.submit "Submit booking", class: "btn btn-flat" %>
    </div>
  <% end %>
</div>
