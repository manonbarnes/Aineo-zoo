<div class="container">
  <i id="paw-form" class="fas fa-paw center mb-2"></i>
  <h2 class="center">Tell us about your date with <%= @animal.name %>!</h2>
  <% if @animal.photo.attached?%>
    <%= cl_image_tag @animal.photo.key, crop: :fill, class: "avatar-show img-show-review" %>
  <% end %>
  <%= simple_form_for [ @animal,@review ] do |f| %>
    <%= f.input :rating, collection: [1, 2, 3, 4, 5] %>
    <%= f.input :content %>
    <%= f.submit "Submit review", class: "btn btn-flat" %>
  <% end %>
</div>
