<div class="container index">
  <div class="row justify-content-center">  <%# centrer et reduit le formulaire %>
    <div class="col-12 col-lg-4">
      <i id="paw-form" class="fas fa-paw center mb-2 mt-2"></i>
      <h2 class="text-center mr-5">Sign in to Aineo-Zoo</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions row justify-content-center">
          <%= f.button :submit, "Log in", class: "btn btn-flat" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
