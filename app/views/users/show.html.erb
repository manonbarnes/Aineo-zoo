<div class="card-profil-user">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-6">
                <div>
                <% if current_user.photo.attached? %>
                    <%= cl_image_tag current_user.photo.key, class: "avatar-large" %>
                <% else %>
                    <%= image_tag "https://images.unsplash.com/photo-1472396961693-142e6e269027?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=606&q=80", class: "avatar-large" %>
                <% end %>
                </div>
                <div class="description">
                    <p>Hi i'm <%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></p>
                    <p>My contact details:</p>
                    <p>Phone number: <%= @user.phone_number %></p>
                    <p>E-mail: <%= @user.email %></p>
                    <p>Address: <%= @user.address%></p>
                    <p>Feel free to contact me!</p>
                </div>
                <% if @user.animals.present? %>
                  <div class="row justify-content-center">
                    <h2><%= @user.first_name%>'s pets</h2>
                  <% end %>
                </div></div>
               <div class="col-12 col-lg-8">
                    <div class="cards">
                        <%= render partial: "animals/animal", collection: @user.animals %>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>
