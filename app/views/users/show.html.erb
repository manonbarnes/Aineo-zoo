<div class="card-profil-user">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-6">
                <div>
                  <% if current_user.photo.attached? %>
                    <%= cl_image_tag current_user.photo.key, class: "avatar-large" %>
                  <% else %>
                    <%= image_tag "https://images.unsplash.com/photo-1472396961693-142e6e269027?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=606&q=80", class: "avatar-large" %>
                  <% end %>
                </div>
                <div class="description">
                    <%= @user.first_name %>
                    <%= @user.last_name %>
                    <%= @user.phone_number %>
                    <%= @user.address %>
                    <%= @user.date_of_birth %>
                </div>
                <div class="row justify-content-center">
                    <h2><%= @user.first_name%>'s pets</h2>


                </div></div>
                <div class="cards">
                    <% @user.animals.each do |animal| %> 
                        <% if animal.photo.attached?%>
                        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)),url('<%= cl_image_path animal.photo.key, crop: :fill%>')">
                        <div class="card-text"><%= link_to animal.name, animal_path(animal)%></div></div>
                        <% end %>    

                    <% end %>
            </div>
        </div>
    </div>
</div>
