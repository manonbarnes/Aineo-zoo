  <% if animal.photo.attached?%>
    <div class="aaa-container" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path animal.photo.key, crop: :fill%>')">
  <% else %>
    <div class="aaa-container" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('https://images.unsplash.com/photo-1472396961693-142e6e269027?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=606&q=80')">
  <% end %>
  <div class="overlay">
    <div class = "items"></div>
      <div class = "items head">
      <%= animal.name %>
      <hr>
    </div>
    <div class="items">
     <%= link_to animal_path(animal), class: "navbar-brand" do %>
          <i class="fas fa-paw"></i>
          <%end%>
      <span>See profile</span>
    </div>
  </div>
</div>
