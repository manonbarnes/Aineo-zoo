<div class="main-container ">
  <div class="row ">
    <div class="col-12 col-lg-8">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @page.each do |group|  %>
            <% if group == @page.first  %>
              <div class="carousel-item active">
            <% else  %>
              <div class="carousel-item">
            <% end %>
                <div class="cards-grid"> 
                  <% group.each do |animal| %>
                    <% if animal.photo.attached?%>
                      <div class="aaa-container" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path animal.photo.key, crop: :fill%>')">
                    <% else %>
                      <div class="aaa-container" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('https://source.unsplash.com/random')">
                    <% end %>
                    <div class="overlay">
                      <div class = "items"></div>
                        <div class = "items head">
                        <%= animal.name %>
                        <hr>
                      </div>
                      <div class="items">
                        <%= link_to animal_path(animal), class: "navbar-brand" do %>
                            <i class="fas fa-paw"></i>
                            <%end%>
                        <span>See profile</span>
                      </div>
                    </div>
                  </div>
                  <% end %>
                </div>
          </div>
          <% end %>


          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
    <div class="col-12 col-lg-3" id="map"
        style="width: 30%; height: 100vh;" data-markers="<%= @markers.to_json %>" 
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY']%>">
    </div>
  </div>
</div>
