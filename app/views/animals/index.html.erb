<div class="index">
  <div class="cards">
    <% @animals.each do |animal| %>
      <% if animal.photo.attached?%>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path animal.photo.key, crop: :fill%>')">
        <div class="card-text"><%= link_to animal.name.capitalize, animal_path(animal)%></div></div>
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('https://images.unsplash.com/photo-1472396961693-142e6e269027?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=606&q=80')"></div>
      <%end %>
    <%end%>
  </div>
</div>
